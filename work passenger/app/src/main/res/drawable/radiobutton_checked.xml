<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->


    <item>
        <shape android:shape="oval">
            <solid android:color="@color/light_blue_color"
                android:width="3dp"/>
            <size
                android:width="9dp"
                android:height="9dp"/>
            <stroke android:color="@color/secondary_color" android:width="1dp"/>
        </shape>
    </item>


    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="5dp"/>
            <solid android:color="@color/secondary_color"/>
            <size
                android:width="1dp"
                android:height="1dp"/>
        </shape>
    </item>
</layer-list>