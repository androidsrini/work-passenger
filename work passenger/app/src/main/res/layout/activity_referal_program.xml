<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_lay" />

    <RelativeLayout
        android:id="@+id/rlReferalMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/rlInivite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:background="@color/light_blue_color">

            <ImageView
                android:id="@+id/imgInviteFirends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bank_detail"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvInviteFriendsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgInviteFirends"
                android:text="@string/referal_inivite_friends"
                android:textColor="@color/secondary_color"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/singleChoiceRadioPre"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radio_check_mark"
                android:button="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlReferalEarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:layout_below="@+id/rlInivite"
            android:background="@color/light_blue_color">

            <ImageView
                android:id="@+id/imgReferalEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_type"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvReferalEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgReferalEarning"
                android:text="@string/referal_code_earning"
                android:textColor="@color/secondary_color"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/singleChoiceRadioPost"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radio_check_mark"
                android:button="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/paymentButton_text"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/primary_color"
        android:background="@color/secondary_color"
        android:stateListAnimator="@null" />


</android.support.constraint.ConstraintLayout>