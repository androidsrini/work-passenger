<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/rl_title_txt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_transfer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Add Contact"
            android:textColor="@color/secondary_color"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:src="@drawable/bottomsheet_close_icon"
            tools:ignore="ContentDescription,RtlSymmetry" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/secondary_color"
        android:text="@string/emergency_bottom_add_desc"
        android:layout_below="@+id/rl_title_txt"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/imgEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emergency_contact"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_main_txt"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginStart="7dp"
        android:hint="Name"
        android:layout_marginTop="20dp"
        android:imeOptions="actionDone"
        android:layout_below="@+id/imgEmergency"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_color"
        android:textColorHint="@color/secondary_color"
        android:textColor="@color/secondary_color" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginStart="7dp"
        android:hint="Number"
        android:inputType="number"
        android:maxLength="10"
        android:imeOptions="actionDone"
        android:layout_below="@+id/etName"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_color"
        android:textColorHint="@color/secondary_color"
        android:textColor="@color/secondary_color" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/low_contrast"
        android:text="Add"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/etNumber"
        android:textColor="@color/secondary_color"
        android:textSize="22sp" />

</RelativeLayout>