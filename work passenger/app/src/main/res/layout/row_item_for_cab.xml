<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/tvMins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no auto"
        android:textColor="@color/secondary_color"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imgCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMins"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sedan"/>


    <TextView
        android:id="@+id/tvTypeOfCab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:textColor="@color/secondary_color"
        android:textSize="12sp"
        android:layout_below="@+id/imgCarType"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.00"
        android:textColor="@color/secondary_color"
        android:textSize="12sp"
        android:layout_below="@+id/tvTypeOfCab"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

</RelativeLayout>